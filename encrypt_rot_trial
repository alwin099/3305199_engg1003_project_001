#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

char encrypt_rot(char x[100], int y); //function prototype, encrypts a given message.

int main()
{
    
char message[100], encrypted_message[100];
int key;

printf("Please enter the message to encrypt:\n"); //prompts user to type the message to be encrypted.
scanf(" %[^\n]s", message); //gets the input and stores it in the variable message, which is a string.

printf("Please enter the key:\n"); //promts user to type the key, which dictates the amount by which the alphabet is rotated.
scanf("%d",&key); //gets the input and stores it in the variable key, which is an int.

//loop to check if the key that is entered is between 0 and 26.
if (key <= 0 || key >= 26) 
    {
		printf("Error, please make sure the key is between 0 and 26"); //displays an error message if the key is out of the range (0 - 26).
		return 0; //exits the program due to error.
    
    }
   
   encrypted_message[100] = encrypt_rot(message, key); //calls the function encrypt_rot.
   printf("The encrypted message is:%s", encrypted_message); //displays teh encrypted message
}


//the funstion to encrypt the message is defined.
char encrypt_rot(char x[100], int y) 
{

char a[100];
int i;
    
    for (i = 0; (i < 100 && x[i] != '\0'); i++)
        {
          a[i] = x[i] + y; //encrypts the message by adding the particular key to the ASCII value.
          if (x[i] > 'z')
              a[i] = x[i] - 26;
        }
    
    return(encrypt_rot);

    
}


